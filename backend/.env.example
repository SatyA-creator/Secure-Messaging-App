# Backend Environment Variables for Vercel + Supabase Deployment

# Supabase Database Configuration
# Get this from: Supabase Dashboard > Project Settings > Database > Connection String (URI)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:6543/postgres
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-here-minimum-32-characters
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8001
DEBUG=False
ENVIRONMENT=production

# CORS Configuration
CORS_ORIGINS=["https://your-frontend-url.com"]

# Security Configuration
BCRYPT_SALT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-gmail-app-password
SMTP_FROM_EMAIL=your-email@gmail.com

# Frontend & WebSocket Configuration
FRONTEND_URL=https://your-frontend-url.com
WEBSOCKET_URL=wss://your-backend-url.com
